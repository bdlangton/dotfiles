" Enable syntax processing.
syntax on

" Set colorscheme.
let g:my_theme = 'PaperColor'
let g:my_color = 'light'
call g:UpdateTheme()

" Highlight current line.
set cursorline

" Show line numbers.
set number

" Show relative line numbers.
set relativenumber

" Visual autocomplete for command menu.
set wildmenu

" Highlight matching [{()}].
set showmatch

" Search as characters are entered.
set incsearch

" Highlight matches.
set hlsearch

" Show tabs as chars so it is visible.
set list
set listchars=tab:>-

" Update status line for lightline plugin.
set laststatus=2

" vim:ft=vim
