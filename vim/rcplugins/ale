" Asynchronous linting/fixing for Vim and Language Server Protocol (LSP)
" integration. Also lightline integration for ale.

Plug 'w0rp/ale'
Plug 'maximbaz/lightline-ale'

" Fix files on save.
let g:ale_fix_on_save = 1

" Lint after 1000ms after changes are made both on insert mode and normal mode.
let g:ale_lint_on_text_changed = 'always'
let g:ale_lint_delay = 1000

" Custom sign indicators in the gutter.
let g:ale_sign_error = "\uf05e"
let g:ale_sign_warning = "\uf071"

" Global fixers.
let g:ale_fixers = {
\   '*': ['remove_trailing_lines', 'trim_whitespace'],
\}

" Global settings.
let g:ale_php_phpcs_executable = '~/.composer/vendor/bin/phpcs'
let g:ale_php_phpcs_standard = 'Drupal'
let g:ale_php_phpmd_ruleset = '~/.git-templates/hooks/phpmd-ruleset.xml'

" vim:ft=vim
