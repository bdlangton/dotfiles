# If a parameter is supplied, print the todoist list, otherwise search TODO.
function todo() {
  if [ $1 = 'personal' ]; then
    todoist list --filter '##Personal & (today | overdue)'
  elif [ $1 = 'professional' ]; then
    todoist list --filter '##Professional & (today | overdue)'
  elif [ $1 = 'work' ]; then
    todoist list --filter '##Work & (today | overdue)'
  elif [ $1 = 'all' ]; then
    todoist list --filter '(today | overdue)'
  else
    ag TODO
  fi
}

# Make directory and change into it.
function mcd() {
  mkdir -p "$1" && cd "$1";
}

# Do an ls after a cd.
cd() {
  COUNT="$(ps -ef | grep prettier | wc -l)"
  if [ $COUNT -lt 2 ]; then
    builtin cd "$@" && ls
  fi
}

# Cd with no ls (the regular way).
# This is used in tmuxinator scripts so the 'cd' command won't fail due to also
# doing an 'ls'.
function cd-no-ls() {
  builtin cd "$@"
}

# Print line(s) from a file.
# To print lines 10-20: printLine 10,20 file.txt
lines () {
  sed -n -e "$1p" "$2"
}

